<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".authentication.SignIn">

    <TextView
        android:id="@+id/txtSidekick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/gaegu_bold"
        android:text="Sidekick"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSidekick"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Password"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/edtEmail1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/gaegu_bold"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gaegu_regular"
        android:text="Forgot Password?"
        android:textColor="@color/black"
        android:layout_below="@id/btnSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtForgotPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/gaegu_bold"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="53dp"
        android:layout_height="249dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/blue"
        android:progressBackgroundTint="#000000"
        android:visibility="gone" />

</RelativeLayout>