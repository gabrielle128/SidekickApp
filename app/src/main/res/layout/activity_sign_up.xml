<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".authentication.SignUp">


    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtConfEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Confirm Email Address"
        android:textColorHint="@color/grey"
        android:inputType="textPersonName"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/edtEmail"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Password"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/edtConfEmail"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtConfPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/gaegu_bold"
        android:hint="Confirm Password"
        android:textColorHint="@color/grey"
        android:inputType="textPassword"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtConfPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gaegu_regular"
        android:text="Please note: with submitting your account registration you confirm that we will process your data according to our privacy policy"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNote"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/gaegu_bold"
        android:text="Sign up"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textAllCaps="false"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/blue"
        android:progressBackgroundTint="#000000"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/gaegu_regular"
        android:text="Already Registered? Sign in"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>