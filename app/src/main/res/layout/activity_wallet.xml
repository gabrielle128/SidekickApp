<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".Wallet">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/botNavView">

        <RelativeLayout
            android:layout_width="411dp"
            android:layout_height="673dp"
            app:layout_constraintBottom_toTopOf="@+id/botNavView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gaegu_bold"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="Budget Tracker"
                android:textColor="@color/black"
                android:textSize="50dp" />

            <ImageView
                android:id="@+id/dottedLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBudget"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/dotted_line" />

            <TableLayout
                android:id="@+id/tablelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dottedLine"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/green">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Budget"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Today"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Week"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Month"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Savings"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tablelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tablelayout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TableRow>

                    <TextView
                        android:id="@+id/budgetTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="₱0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/todayTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="₱0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/weekTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="₱0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/monthTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="₱0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/savingsTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/borders"
                        android:fontFamily="@font/gaegu_bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="₱0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </TableRow>

            </TableLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tablelayout1">

                <GridLayout
                    android:id="@+id/gridlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:columnCount="2"
                    android:rowCount="3">

                    <!--budget card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/budgetCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/budgetBtnImageView"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/budget" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="My Budget"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--today card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/todayCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/todayBtnImageView"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/today" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="Today"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--week card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/weekCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/weekBtnImageView"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/week" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="This Week"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--month card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/monthCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/monthBtnImageView"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/month" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="This Month"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--analytics card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/analyticsCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/analyticsBtnImageView"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/analytics" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="Analytics"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--history card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/historyCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@color/bgcolor"
                        app:cardBackgroundColor="@color/bgcolorCV"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/historyBtnImageView"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/history" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gaegu_bold"
                                android:text="History"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/bgcolor"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navmenu" />



</RelativeLayout>